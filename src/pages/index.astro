---
import { Image } from 'astro:assets'

import Layout from '../layouts/Layout.astro'
import Navbar from '../components/global/navbar/Navbar.astro'
import Hero from '../components/home/hero/Hero.astro'
import Products from '../components/home/products/Products.tsx'
import News from '../components/home/news/News.tsx'
import Testimonials from '../components/home/testimonials/Testimonials.tsx'
import Footer from '../components/global/footer/Footer.astro'
import Partners from '../components/home/partners/Partners'

import cls from './main.module.scss'
---

<Layout title='Welcome to Astro.'>
  <div class={cls.wrapper}>
    <Navbar />
    <Hero />
    <Products client:only='react' />
    <News client:only='react' />
    <Testimonials client:only='react' />
    <Partners client:only='react' />
    <Footer />
  </div>
</Layout>

<script>
  import AOS from 'aos'

  AOS.init({
    startEvent: 'load'
  })
</script>
